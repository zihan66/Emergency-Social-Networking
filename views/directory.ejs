<link rel="stylesheet" href="/stylesheets/directory.css" />
<div class="directory-wrapper">
  <header class="directory-header">
    <!-- <span class="header1">User Directory</span> -->
    <i class="bars icon" id="bar"></i>
    <div class="unreadMsgs">
      <button id="unread" class="ui inverted button compact">
        Unread Messages
      </button>
      <div class="unreadMsgBlock"><ul class="unreadMsgList"></ul></div>
    </div>

    <div class="search">
      <button id="search" class="ui inverted button compact">search</button>
      <div class="searchCriteria">
        <div class="searchUsername">
          <button id="searchUsername" class="ui inverted button compact">
            username
          </button>
        </div>
        <div class="searchStatus">
          <button id="searchStatus" class="ui inverted button compact">
            status
          </button>
        </div>
      </div>
    </div>
    <span class="header1">Directory</span>
    <div class="unreadMsgs"></div>
    <!-- <button id="logout" class="ui inverted button compact">Logout</button> -->
  </header>

  <div class="hamburger-menu">
    <div class="links">
      <div class="menu-item">
        <ul class="directory_profile"></ul>
        <!-- <button class="ui inverted whitesmoke button" id="user-profile"> -->
        <!-- My Status:<var>directory_profile_username</var> <var>directory_profile_status</var> -->
        <!-- </button> -->
      </div>
      <HR WIDTH="90%" SIZE="7" ALIGN="middle" NOSHADE />
      <div class="menu-item">
        <button class="ui inverted whitesmoke button" id="status-bar">
          Set Status:
        </button>
      </div>
      <div class="links2">
        <!-- <div class="ham-img">
        </div> -->
        <p></p>
        <form class="ui form">
          <button id="setRedButton" class="ui inverted button compact">
            <img
              class="ui rounded-image"
              height="30"
              width="30"
              src="/images/red.png"
            />
            <i> Emergency </i>
            <i class="circle outline icon"></i>
          </button>
          <button id="setGreenButton" class="ui inverted button compact">
            <img
              class="ui rounded-image"
              height="30"
              width="30"
              src="/images/green.png"
            />
            <i> I am OK </i>
            <i class="circle outline icon"></i>
          </button>
          <p></p>
          <button id="setYellowButton" class="ui inverted button compact">
            <img
              class="ui rounded-image"
              height="30"
              width="30"
              src="/images/yellow.png"
            />
            <i> I need Help </i>
            <i class="circle outline icon"></i>
          </button>
          <button id="setGreyButton" class="ui inverted button compact">
            <img
              class="ui rounded-image"
              height="30"
              width="30"
              src="/images/grey.png"
            />
            <i> Undefined </i>
            <i class="circle outline icon"></i>
          </button>
        </form>
      </div>
      <HR WIDTH="90%" SIZE="7" ALIGN="middle" NOSHADE />
      <button id="go-to" class="ui inverted whitesmoke button">
        Public Messages
      </button>
      <HR WIDTH="90%" SIZE="7" ALIGN="middle" NOSHADE />
      <a href="./measure">
        <button class="ui inverted whitesmoke button" id="measure-bar">
          Measure
        </button>
      </a>
      <HR WIDTH="90%" SIZE="7" ALIGN="middle" NOSHADE />
      <a href="./announcement">
        <button class="ui inverted whitesmoke button" id="announcement-bar">
          Announcement
        </button>
      </a>
      <HR WIDTH="90%" SIZE="7" ALIGN="middle" NOSHADE />
      <button id="logout" class="ui inverted whitesmoke button">Logout</button>
      <HR WIDTH="90%" SIZE="7" ALIGN="middle" NOSHADE />
    </div>
  </div>
  <div class="directory-container">
    <ul class="user-list"></ul>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/brownies"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="/javascripts/directory.js"></script>
</div>
